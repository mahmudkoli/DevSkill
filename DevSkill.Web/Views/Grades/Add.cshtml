@model DevSkill.Web.Models.GradeModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>GradeModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select class="form-control" asp-for="StudentId" asp-items="@(new SelectList(Model.Students,"Value","Text"))">
                    <option value="">Choose--</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select class="form-control" asp-for="SubjectId" asp-items="@(new SelectList(Model.Subjects,"Value","Text"))">
                    <option value="">Choose--</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradeValue" class="control-label"></label>
                <input asp-for="GradeValue" class="form-control" />
                <span asp-validation-for="GradeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
