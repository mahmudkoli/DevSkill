@model StudentRegistrationModel

<div class="">
    <form asp-action="AddOrEdit" id="student-registration-form">
        <div class="">
            <fieldset class="mb-3">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-form-label col-lg-4 required" asp-for="StudentId"></label>
                            <div class="col-lg-8">
                                <select class="form-control" asp-for="StudentId" asp-items="@(new SelectList(Model.StudentSelectList,"Value","Text"))">
                                    <option value="">Choose--</option>
                                </select>
                                <span asp-validation-for="StudentId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-4 required" asp-for="CourseId"></label>
                            <div class="col-lg-8">
                                <select class="form-control" asp-for="CourseId" asp-items="@(new SelectList(Model.CourseSelectList,"Value","Text"))">
                                    <option value="">Choose--</option>
                                </select>
                                <span asp-validation-for="CourseId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-4 required" asp-for="EnrollDate"></label>
                            <div class="col-lg-8">
                                <div class="input-group">
                                    <input type="text" class="form-control pickadate-accessibility" placeholder="Select Date" asp-for="EnrollDate">
                                    <span class="input-group-append">
                                        <span class="input-group-text"><i class="icon-calendar22"></i></span>
                                    </span>
                                </div>
                                <span asp-validation-for="EnrollDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-4 required" asp-for="IsPaymentComplete"></label>
                            <div class="col-lg-8">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input-styled" asp-for="IsPaymentComplete">
                                    </label>
                                </div>
                                <span asp-validation-for="IsPaymentComplete" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </fieldset>

        </div>
        <div class="">
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-light" data-dismiss="modal"><i class="icon-close2"></i> Close</button>
                <button type="submit" class="btn bg-teal ml-2"><i class="icon-file-check2"></i> Save</button>
            </div>
        </div>
    </form>
</div>



<script>
    $.validator.unobtrusive.parse("#student-registration-form");

    $('.form-check-input-styled').uniform();

    $('.pickadate-accessibility').pickadate({
        labelMonthNext: 'Go to the next month',
        labelMonthPrev: 'Go to the previous month',
        labelMonthSelect: 'Pick a month from the dropdown',
        labelYearSelect: 'Pick a year from the dropdown',
        selectMonths: true,
        selectYears: true
    });
</script>