@model CourseModel

<div class="">
    <form asp-action="AddOrEdit" id="course-form">
        <div class="">
            <fieldset class="mb-3">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-form-label col-lg-4 required" asp-for="Title"></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" asp-for="Title">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-4 required" asp-for="SeatCount"></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" asp-for="SeatCount">
                                <span asp-validation-for="SeatCount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-4 required" asp-for="Fee"></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" asp-for="Fee">
                                <span asp-validation-for="Fee" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </fieldset>

        </div>
        <div class="">
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-light" data-dismiss="modal"><i class="icon-close2"></i> Close</button>
                <button type="submit" class="btn bg-teal ml-2"><i class="icon-file-check2"></i> Save</button>
            </div>
        </div>
    </form>
</div>



<script>
    $.validator.unobtrusive.parse("#course-form");
</script>